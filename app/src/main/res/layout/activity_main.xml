<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2C2C"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="360dp"
        android:layout_height="105dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/textfield"
        android:gravity="end"
        android:paddingTop="40dp"
        android:paddingRight="10dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="40sp">

    </TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="360dp"
        android:layout_height="105dp"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="2dp"
        android:background="@drawable/textfield"
        android:gravity="end"
        android:paddingTop="40dp"
        android:paddingRight="10dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="40sp">

    </TextView>

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/textView2"
        android:layout_marginLeft="2dp"

        android:text="AC"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonBackSpace"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/textView2"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonClear"

        android:drawableLeft="@drawable/ic_baseline_backspace_24"

        android:drawableTint="#FF03DAC5"
        android:paddingLeft="35dp"
        android:text=""
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonPercent"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/textView2"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonBackSpace"

        android:text="%"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_below="@id/textView2"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonPercent"

        android:paddingLeft="2dp"
        android:text="/"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button9"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/buttonClear"

        android:layout_marginLeft="2dp"
        android:text="9"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button8"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/buttonBackSpace"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonClear"
        android:text="8"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button7"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/buttonPercent"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonBackSpace"
        android:text="7"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_below="@id/buttonDivide"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonPercent"

        android:paddingLeft="2dp"
        android:text="X"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button6"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/button9"
        android:layout_marginLeft="2dp"
        android:text="6"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button5"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/button8"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonClear"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button4"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/button7"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonBackSpace"
        android:text="4"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_below="@id/buttonMultiply"
        android:layout_marginLeft="2dp"

        android:layout_toRightOf="@+id/buttonPercent"

        android:paddingLeft="2dp"
        android:text="-"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button3"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/button6"
        android:layout_marginLeft="2dp"
        android:text="3"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button2"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/button5"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonClear"
        android:text="2"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button1"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/button4"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonBackSpace"
        android:text="1"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_below="@id/buttonSubtract"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonPercent"

        android:paddingLeft="2dp"
        android:text="+"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button0"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/button3"
        android:layout_marginLeft="2dp"
        android:text="0"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/button2"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonClear"

        android:text="."

        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="186dp"
        android:layout_height="88dp"
        android:layout_below="@id/buttonAdd"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="3dp"

        android:layout_toRightOf="@+id/buttonBackSpace"
        android:text="="
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="25sp">

    </Button>


</RelativeLayout>